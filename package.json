{
  "name": "@flyerhq/react-native-chat-ui",
  "version": "2.0.0",
  "description": "Modern, actively maintained React Native chat UI library with TypeScript support and customizable themes.",
  "homepage": "https://github.com/scalecode-solutions/react-native-chat-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalecode-solutions/react-native-chat-ui.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Oleksandr Demchenko <alexdemchenko@yahoo.com>",
  "contributors": [
    "Vitalii Danylov <vitaliidanylov1992@gmail.com>",
    "Volodymyr Smolianinov <voidozzer@gmail.com>"
  ],
  "license": "Apache-2.0",
  "keywords": [
    "chat",
    "ui",
    "react-native",
    "react-native-component",
    "ios",
    "android",
    "typescript"
  ],
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "compile": "rm -rf lib && tsc -p . && copyup src/assets/*.png lib",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "npm run compile",
    "test": "jest",
    "type-coverage": "type-coverage"
  },
  "dependencies": {
    "@flyerhq/react-native-keyboard-accessory-view": "^2.4.0",
    "@flyerhq/react-native-link-preview": "^1.6.0",
    "dayjs": "^1.11.13",
    "react-native-image-viewing": "^0.2.2",
    "react-native-parsed-text": "^0.0.22"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@react-native/babel-preset": "^0.76.3",
    "@react-native/eslint-config": "^0.76.3",
    "@react-native/metro-config": "^0.76.3",
    "@react-native/typescript-config": "^0.76.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.18",
    "@types/react-test-renderer": "^18.3.0",
    "babel-jest": "^29.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.1",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "react": "^18.3.1",
    "react-native": "^0.76.5",
    "react-native-safe-area-context": "^4.14.1",
    "react-test-renderer": "^18.3.1",
    "type-coverage": "^2.29.7",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0",
    "react-native-safe-area-context": ">=3.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/index.{ts,tsx}",
      "!**/styles.{ts,tsx}",
      "!**/types.{ts,tsx}",
      "!**/*.d.ts",
      "!**/ImageView.android.ts",
      "!**/ImageView.ios.ts",
      "!**/ImageView.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "react-native",
    "setupFiles": [
      "./jest/setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@flyerhq|@react-native|react-native))"
    ]
  },
  "typeCoverage": {
    "cache": true,
    "ignoreCatch": true,
    "ignoreNonNullAssertion": true,
    "ignoreUnread": true,
    "is": 100,
    "showRelativePath": true,
    "strict": true
  }
}
